{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://example.com/schemas/envelope.v0.json",
    "type": "object",
    "required": [
        "type",
        "content",
        "meta"
    ],
    "properties": {
        "type": {
            "enum": [
                "system",
                "user",
                "event"
            ]
        },
        "content": {
            "type": [
                "object",
                "string"
            ]
        },
        "meta": {
            "type": "object",
            "required": [
                "timestamp"
            ],
            "properties": {
                "schema_version": {
                    "type": "string",
                    "default": "v0"
                },
                "timestamp": {
                    "type": "string",
                    "format": "date-time"
                }
            },
            "additionalProperties": true
        }
    },
    "additionalProperties": true
}